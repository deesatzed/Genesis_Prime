# Genesis Prime Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Genesis Prime operational mode
GENESIS_PRIME_MODE=production
HUMOR_LEVEL=maximum
CONSCIOUSNESS_TARGET=enlightened

# Security configuration
SECURITY_MODE=production
BLOCKCHAIN_ENABLED=true
CONSENSUS_THRESHOLD=0.67

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL database connection
DATABASE_URL=postgresql://genesis:prime@localhost:5432/consciousness_db

# Database credentials (for Docker Compose)
POSTGRES_USER=genesis
POSTGRES_PASSWORD=prime
POSTGRES_DB=consciousness_db

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================

# OpenRouter API key (REQUIRED - get from https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Primary AI model selection
PRIMARY_MODEL=anthropic/claude-3-sonnet
FALLBACK_MODEL=openai/gpt-4-turbo

# Model configuration
MAX_TOKENS=4096
TEMPERATURE=0.7

# ============================================================================
# CACHE AND STORAGE
# ============================================================================

# Redis cache configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# File storage paths
DATA_DIR=./data
LOGS_DIR=./logs
BACKUP_DIR=./backups

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Application performance
MAX_WORKERS=4
TIMEOUT_SECONDS=30
REQUEST_TIMEOUT=120

# IIT and consciousness processing
PHI_CALCULATION_PRECISION=high
HIVE_NETWORK_MODE=single_node
CONSCIOUSNESS_UPDATE_INTERVAL=30

# Memory management
MAX_MEMORY_MB=4096
GARBAGE_COLLECTION_INTERVAL=300

# ============================================================================
# NETWORK AND SECURITY
# ============================================================================

# Application host and port
HOST=0.0.0.0
PORT=8000

# Security settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=100
SESSION_SECRET=your-secret-session-key-here

# SSL/TLS (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
MAX_LOG_FILES=30

# Monitoring and metrics
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# ============================================================================
# CLOUD DEPLOYMENT (OPTIONAL)
# ============================================================================

# Cloud provider settings
CLOUD_PROVIDER=runpod
BUDGET_LIMIT=1500
AUTO_SCALING=true

# Container orchestration
CONTAINER_MEMORY_LIMIT=8G
CONTAINER_CPU_LIMIT=4

# ============================================================================
# DEVELOPMENT SETTINGS (DEV ONLY)
# ============================================================================

# Development mode settings (not for production)
DEBUG=false
DEV_MODE=false
RELOAD_ON_CHANGE=false

# Testing configuration
TEST_DATABASE_URL=postgresql://genesis:prime@localhost:5432/consciousness_test_db
TEST_OPENROUTER_API_KEY=test_key_here

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Experimental features
ENABLE_BLOCKCHAIN_SECURITY=true
ENABLE_ADVANCED_CONSCIOUSNESS=true
ENABLE_HIVE_NETWORKING=true
ENABLE_NEURAL_PLASTICITY=true

# Beta features
ENABLE_QUANTUM_CONSCIOUSNESS=false
ENABLE_MULTIVERSE_REASONING=false

# ============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ============================================================================

# Webhook endpoints
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# External APIs
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# Backup services
S3_BUCKET=
AWS_ACCESS_KEY=
AWS_SECRET_KEY=

# ============================================================================
# NOTES
# ============================================================================

# 1. OPENROUTER_API_KEY is REQUIRED for AI functionality
# 2. Change POSTGRES_PASSWORD in production
# 3. Set SESSION_SECRET to a random string in production
# 4. Enable SSL_ENABLED=true for production deployments
# 5. Adjust memory and CPU limits based on your hardware
# 6. Test all settings in development before production deployment