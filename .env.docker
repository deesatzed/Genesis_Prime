# Genesis Prime Docker Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenRouter API Key (Primary LLM provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Anthropic API Key (For Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (For GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Google API Key (For Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
ENVIRONMENT=production
PYTHONPATH=/app

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3001

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/genesis_prime

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
API_RATE_LIMIT=100
FRONTEND_RATE_LIMIT=300

# Docker Network Configuration
GENESIS_NETWORK_SUBNET=172.20.0.0/16
